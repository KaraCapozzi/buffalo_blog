<nav><%= link_to 'Home', root_path %>
<%= link_to 'New article', new_article_path %></nav>
<br>
<div class='articles'>
<h2>Blog</h2>
<br>

<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
  </tr>
<% if @articles.any? %>
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td><%= link_to 'Article', article_path(article) %></td>
      <td><%= link_to 'Edit', edit_article_path(article) %></td>
      <td><%= link_to 'Delete', article_path(article),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
<% else %>
  <tr>
    <td><p>There are no articles to display.  Sorry.</p></td>
  </tr>
  <% end %>
</table>
</div>

<div class='buffalo'>
  <img src='https://static.pexels.com/photos/360592/pexels-photo-360592.jpeg'>
</div>
